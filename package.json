{
  "name": "nemo-koop",
  "version": "1.0.0",
  "private": true,
  "description": "A Koop server for NEMO",
  "main": "src/index.js",
  "scripts": {
    "test": "mocha 'test/**/*.test.js'",
    "start": "nodemon src/index.js",
    "serve": "pm2 startOrRestart ecosystem.config.js",
    "stop": "pm2 stop ecosystem.config.js",
    "deploy": "pm2 deploy ecosystem.config.js production",
    "format": "prettier --write '*.js' --write '{src,test}/**/*.js'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "dependencies": {
    "config": "3.3.1",
    "koop": "4.0.1",
    "koop-output-geojson": "1.1.2",
    "koop-provider-nemo": "1.1.0",
    "pm2": "4.4.1"
  },
  "devDependencies": {
    "@koopjs/cli": "0.6.3",
    "chai": "4.2.0",
    "husky": "4.2.5",
    "mocha": "8.1.1",
    "nodemon": "2.0.4",
    "prettier": "2.0.5",
    "pretty-quick": "2.0.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cooperka/nemo-koop.git"
  },
  "keywords": [
    "koop",
    "app",
    "nemo"
  ]
}
